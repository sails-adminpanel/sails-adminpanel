{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": false,
    "declaration": true,
    "removeComments": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitBOM": false,
    // "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "lib": [
      "dom"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}