{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"sourceMap": false,
		"declaration": true,
		"removeComments": false,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		// "strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"lib": [
			"dom"
		],
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"exclude": [
		"node_modules"
	]
}
