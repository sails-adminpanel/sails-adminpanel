<div class="custom-catalog__form">
    <div class="flex flex-col gap-2">
        <label class="admin-panel__title" for="root-group">Select <%= item.name %></label>
        <select id="popup-select-item" class="select min-w-[200px]">
            <option selected disabled value="">Select <%= item.name %></option>
            <% items.forEach(itemF => { -%>
                <option value="<%= itemF.id %>"><%= itemF.name %></option>
            <% }) -%>
        </select>
    </div>
    <div>
        <span><b>OR</b></span>
    </div>
    <div>
        <div class="relative inline-flex">
            <button class="btn btn-add" id="popup-add-item"><i class="las la-plus"></i><span>create new <%= item.name %></span>
            </button>
        </div>
    </div>
</div>
<script>
	{
	    const btn = document.getElementById('popup-add-item')
        const select = document.getElementById('popup-select-item')
		let parentId = document.getElementById('parentId')

        // create new Model
        btn.addEventListener('click', async function (){
			// window.AdminPopUp.closeAll()
			let content = await ky.get('/admin/model/<%= item.model -%>/add?without_layout=true').text()
			const embed = document.createElement('div');
			embed.id = 'embed';
			embed.innerHTML = `
			        <div class="modal-content">
		                <div class="custom-catalog__form-input">
			                <div class="flex flex-col gap-4 mt-4">
			                    ${content}
                            </div>
                        </div>
                    </div>`;
			const popup = AdminPopUp.new()
			popup.content.appendChild(embed);
			setTimeout(() => {
				const scripts = embed.getElementsByTagName('script');
				let i = 1
				for (let script of scripts) {
					let elem = document.getElementById(`emb_${i}`)
					if (elem) elem.remove()
					const newScript = document.createElement('script');
					newScript.text = script.innerHTML;
					newScript.setAttribute('id', `emb_${i}`);
					document.body.appendChild(newScript)
					i++
				}
			}, 0)
        })

        // select created model
        select.addEventListener('change', function (e){
			ky.post('', {json: {data: {record: e.target.value, parentId: parentId.value, _method: 'select', type: "<%= item.type %>"},  _method: 'createItem'}}).then(r => {
				window.AdminPopUp.closeAll()
			})
        })
    }
</script>
